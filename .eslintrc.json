{
    "env": {
        "browser": true,
        "es2021": true
    },
    "extends": [
        "plugin:react/recommended",
        "airbnb"
    ],
    "parserOptions": {
        "ecmaFeatures": {
            "jsx": true
        },
        "ecmaVersion": 12,
        "sourceType": "module"
    },
    "plugins": [
        "react",
        "import"
    ],
    "rules": {
        "no-unused-vars":"warn",
        "no-empty": ["error", { "allowEmptyCatch": true }],
        "linebreak-style": "off",
        "react/forbid-prop-types": "off",
        "import/prefer-default-export": "off",
        "import/order": [
            "error",
            {
                "groups": ["builtin", "external", "internal"],
                "pathGroups": [
                  {
                    "pattern": "react",
                    "group": "external",
                    "position": "before"
                  }
                ],
                "pathGroupsExcludedImportTypes": ["react"],
                "newlines-between": "always",
                "alphabetize": {
                  "order": "asc",
                  "caseInsensitive": true
                }
              }
          ]
    },
    "settings": {
        "import/resolver": {
            "node": {
                "moduleDirectory": ["node_modules", "src/"]
            }
        }
    }
}
